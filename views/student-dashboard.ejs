<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/styles-studentdashboard.css">
</head>
<body>
  <div class="container mt-3">
    <% if (successMessage.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= successMessage %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    

    <% if (errorMessage.length > 0) { %>
        <div class="alert alert-danger">
            <%= errorMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        </div>
    <% } %>
</div>
    <!-- Top Navigation Bar -->
    
    <div class="top-nav">
        <h1>Student Dashboard</h1>
        <div>Welcome <%= student.name %></div>
        <div class="actions">
            <a href="#notifications" class="notification-link">Notifications</a>
            <a href="#profile" class="profile-link">Profile</a>
            <a href="/auth/logout"><button type="button" class="btn btn-danger">Logout</button></a>
        </div>
    </div>


    <!-- Dynamic Content Area -->
    <div class="main-content" id="content">
        <h2>Welcome to the Student Dashboard</h2>
        <p>Here you can manage your courses, view attendance, and more.</p>
    </div>
    <div class="side-nav">
       <h3>My Courses:  <% student.courses.length %></h3>      
       <table class="table table-dark table-hover m-4">
        <th>Sl No. </th><th>Course Id</th><th>Course Name</th><th>Teacher</th><th colspan="2">Actions</th>
        <% student.courses.forEach((course, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td><%= course.code %></td>
                <td><%= course.name %></td>
                <td><%= course.teacher.name %></td>
                <td>
                  <form action="/attendance/mark" method="POST">
                    <input type="hidden" name="courseId" value="<%= course._id %>">
                    <input type="hidden" name="studentId" value="<%= student._id %>">
                    <label for="code">Attendance Code</label>
                    <input id="code" name="attendanceCode" type="text" required>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
                <td>
                  <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#attendanceModal-<%= course._id %>">
                      See Attendance
                  </button>
              </td>
            </tr>

                
            </tr>
        <% }) %>
      </table>  
  <!-- Modal -->
  <% student.courses.forEach((course) => { %>
    <div class="modal fade" id="attendanceModal-<%= course._id %>" tabindex="-1" aria-labelledby="attendanceModalLabel-<%= course._id %>" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="attendanceModalLabel-<%= course._id %>">Attendance for <%= course.name %></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="attendanceSummary-<%= course._id %>">
                        <!-- Attendance summary will be dynamically loaded here -->
                    </p>
                </div>
            </div>
        </div>
    </div>
    <% }) %>
    <script>
      document.querySelectorAll('[data-bs-toggle="modal"]').forEach(button => {
        button.addEventListener('click', async (event) => {
            const courseId = event.target.getAttribute('data-bs-target').split('-')[1];
            const studentId = '<%= student._id %>';
            console.log(`Fetching attendance summary for courseId: ${courseId}, studentId: ${studentId}`);
    
            const response = await fetch(`/attendance/summary/${courseId}/${studentId}`);
            console.log(`Response status: ${response.status}`);
            const data = await response.json();
            console.log('Response data:', data);
    
            const attendanceSummary = document.getElementById(`attendanceSummary-${courseId}`);
            if (response.ok) {
                attendanceSummary.innerHTML = `
                    <strong>Total Number of Attendance Sessions:</strong> ${data.totalSessions}<br>
                    <strong>Total Number of Times Present:</strong> ${data.totalPresent}
                `;
            } else {
                attendanceSummary.textContent = 'Error fetching attendance summary.';
            }
        });
    });
  </script>
</body>
</html>
